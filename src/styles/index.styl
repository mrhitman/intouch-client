mainBackground = #4C77A4
lightBackgroud = #F5F8FA
mainTextColor = #8296A4
bodyColor = #ECEDEF

body 
  color bodyColor
  background-color lightBackgroud

a
  text-decoration none

.app 
  margin auto
  width 925px
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

.content
  display inline-block
  background white

.line
  border 1px solid rgba(0, 0, 0, 0.1)
  margin 5px 10px 5px

.info
  margin 20px 10px 20px 10px
  font-size 0.82em
  text-align center
  font-weight bold
  color mainTextColor

.status
  margin 10px
  font-size 0.8em
  text-align left
  font-weight bold
  color mainBackground