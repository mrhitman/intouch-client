
.content
    width 100%
    display flex
    flex-direction row

    input 
        border-radius 4px 
        border 1px solid #E4E4E4
        width 180px
        height 28px
        margin 6px
        padding 2px 0 2px 8px
    
    button
        display block
        border-radius 4px
        color #EBECEF
        background #4D76A3
        border none
        width 190px
        height 34px
        margin 6px
        cursor pointer

        &:active
            background #3C6592
        &:hover
            background #537ba8
    
    &Error
        font-size 0.8em
        margin 10px
        color rgba(255, 0, 0, 0.6)


.login 
    display inline-block
    width 210px
    padding 40px 20px 0 20px
    height 80vh

.register
    display inline-block
    position fixed
    left 55%
    top 30%
    transform translate(-50%, -50%)
    width 210px